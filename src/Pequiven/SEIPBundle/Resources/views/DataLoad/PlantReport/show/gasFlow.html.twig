{% trans_default_domain 'PequivenSEIPBundle' %}

<div class="block">
    <div class="block-title">
        <h3> {{ 'GasFlow'|trans }}&nbsp;
            ({{ plant_report.consumerPlanningGasFlow|length }})
        </h3>
        <div class="button-group absolute-right compact">
            {% if periodService().isAllowPlanningReport %}
                {% if(plant_report.plant.childrens|length == 0) and (plant_report.consumerPlanningGasFlow|length == 0) %}
                    <a class="button icon-list-add" href="{{ path('pequiven_consumer_planning_gasflow_create',{plantReport: plant_report.id}) }}">{{ 'pequiven.add'|trans({},'messages') }}</a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <div class="with-padding">
        <table class="simple-table responsive-table tables-extras" id="sorting-example2">
            <thead>
                <tr>
                    <th scope="col" width="80%">{{ 'GasFlow'|trans }}</th>
                    <th scope="col" width="20%">&nbsp;</th>
                </tr>
            </thead>
            {% set colspan = 6 %}
            <tbody>
                {% for consumerPlanningGasFlowObject in plant_report.consumerPlanningGasFlow %}
                    <tr>
                        <td>{{ loop.index }} - 
                            {{ generateLink(consumerPlanningGasFlowObject) }}
                        </td>
                        <td class="low-padding align-center">
                            {% if periodService().isAllowPlanningReport %}
                                <a href="{{ path("pequiven_consumer_planning_gasflow_update",{id: consumerPlanningGasFlowObject.id}) }}" class="button compact icon-pencil">{{ "pequiven_seip.actions.edit"|trans }}</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr >
                        <td colspan="{{ colspan }}" class="empty_row">
                            {{ "empty.consumer_planning_gas_flow"|trans }}
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>
</div>