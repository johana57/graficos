{% trans_default_domain 'PequivenSEIPBundle' %}

{% if product is defined %}
    {% set productUnit = product.productUnit %}
{% else %}
    {% set productUnit = "" %}
{% endif %}

{% if unit is not defined %}
    {% set unit = productUnit %}
{% endif %}

{% for i in 1..31 %}
    {% set planN = "day"~ i ~ "Plan" %}
    {% set realN = "day" ~ i ~ "Real" %}
        <div class="columns">
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ 'pequiven_seip.plan_n'|trans({"%n%":i}) }}</label>
                    {{ attribute(detail,planN)|myNumberFormat }}&nbsp;{{ unit }}
                </p>
            </div>
            <div class="new-row-mobile six-columns six-columns-tablet twelve-columns-mobile">
                <p class="inline-label">
                    <label class="label">{{ 'pequiven_seip.real_n'|trans({"%n%":i}) }}</label>
                    {{ attribute(detail,realN)|myNumberFormat }}&nbsp;{{ unit }}
                </p>
            </div>
        </div>
{% endfor %}