{% extends "PequivenSEIPBundle:Template:Developer/layout.html.twig" %}
{% trans_default_domain 'PequivenSEIPBundle' %}

{% block before_body %}
    {{ contentHeader(
        ("monitor.objetiveTactic"|trans)
    ) }}
{% endblock %}

{% block body %}
    <div ng-controller="DashboardController" ng-init="renderChartTactic('chartContainerTactic',{{ categories|json_encode() }},{{ dataPlanTactic|json_encode() }},{{ dataRealTactic|json_encode() }},{{ dataPorcTactic|json_encode() }},'{{ "principal.chart.captionObjTactic"|trans }}','{{ optionsChart.typeLabel }}')" class="dashboard" style="background: -webkit-linear-gradient(left, rgba(0, 0, 0, 0.25), rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0) 60%, rgba(0, 0, 0, 0.25)), -webkit-linear-gradient(top, #5e6165, #33373a);">
    <p class="button-height">
        <a href="{{ path('monitorObjetiveOperative') }}" class="button red-gradient">{{ "principal.button.objOperative"|trans }}</a>
        <a href="{{ path('monitorArrangementProgram') }}" class="button red-gradient">{{ "principal.button.arrangementProgram"|trans }}</a>
    </p>
    <div id="chartTactic" class="columns">
        <div class="nine-columns twelve-columns-mobile" id="chartContainerTactic">
            {#                        <div id="chartContainer">FusionCharts XT will load here!</div>#}
            <!-- This div will hold the chart generated in the footer -->
        </div>
        <div class="three-columns twelve-columns-mobile new-row-mobile">
            <ul class="stats">
                {% for data in dataLinkTactic %}
                    <li>
                        <a href="{{ data.linkTypeGroup }}">
                            {{ data.typeGroup }}<br>
                            <b style="font-size:25px">{{ data.porcCarga }}%</b>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
                
<hgroup id="main-title" class="thin">
    <h1>{{ "principal.box.indicatorTactic"|trans }}</h1>
</hgroup>
<div class="with-padding">
    <div class="columns">
        {{ boxRender.renderBox('pequiven_seip_box_tactic_summaryindicatorcharged')|raw }}
    </div>
</div>
{% endblock body %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/tecnocreacionesvzlagovernment/template/developer/css/styles/agenda3860.css?v=1') }}">
    <link rel="stylesheet" href="{{ asset('bundles/tecnocreacionesvzlagovernment/template/developer/css/styles/dashboard3860.css?v=1') }}">
{% endblock stylesheets %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{  asset('bundles/pequivenseip/fusioncharts/js/fusioncharts.js') }}"></script>
    <script src="{{  asset('bundles/pequivenseip/fusioncharts/js/themes/fusioncharts.theme.fint.js') }}"></script>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script type="text/javascript">

    </script>

{% endblock %}