                    </table>
                </fieldset>
            {% endif %}



        </div>
        {% if(datosUser!=null) %}
            <div class="twelve-columns" style="text-align: right">
                <a class="button" id="downloadPdf" href="javascript:void(0)">
                    <span class="button-icon"><span class="icon-download"></span></span>
