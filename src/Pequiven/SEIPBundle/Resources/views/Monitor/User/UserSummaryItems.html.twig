{% trans_default_domain 'PequivenArrangementProgramBundle' %}
<div class="with-padding">
    <div class="columns">
        <div class="twelve-columns">
            {% if(datosUser!=null) %}
                <h3 class="thin underline text-center">Usuario</h3>
                <fieldset class="fieldset">
                    <p class="inline-label">
                        <label style="font-weight: bold;" class="label">Nombre de Usuario</label>
                        {{ datosUser.getFullNameUser }}
                    </p>

                    <p class="inline-label">
                        <label style="font-weight: bold;" class="label">Fecha:</label>
                        {{ "now"|date("d/m/Y") }}
                    </p>
                </fieldset>

            {% endif  %}

            {#            PROGRAMAS DE GESTION#}
            {% if(management["arrangementPrograms"]|length>0) %}
                <h3 class="thin underline text-center">{{ 'pequiven.arrangement_program.arrangement_programs'|trans }}</h3>
                <fieldset class="fieldset">

                    {#                    <legend class="legend">Programas de Gestion</legend>#}
                    <table class="simple-table responsive-table" id="sorting-example2">

                        <thead>
                            <tr>
                                <th style="vertical-align: middle;" width="2%">#</th>                                
                                <th style="vertical-align: middle; text-align: center" scope="col" width="15%" >Referencia</th>
                                <th style="vertical-align: middle;" scope="col" width="38%" >Nombre del Programa</th>
                                <th style="vertical-align: middle;" scope="col" width="30%" colspan="2">Avance hasta la Fecha</th>    
                                <th style="vertical-align: middle; text-align: center" scope="col" width="10%" >Aporte</th>    
                                <th style="vertical-align: middle; text-align: center" scope="col" width="5%" >Result.</th>  
                            </tr>
                        </thead>
                        <tbody>
                            {% set cont = 1 %}
                            {% for pg in  (management["arrangementPrograms"]) %} 
                                <tr style="height: 50px;">
                                    <td>{{cont}}-</td>
                                    <th style="color: #607890;" scope="row">
                                        <i class="fa fa-tasks"></i>
                                        {{ pg.ref }}
                                    </th>                                    
                                    <td style="text-align: justify;">
                                        <b>
                                            {% if (pg.description==null) %}
                                                No Cargado
                                            {% else %}
                                                {{ pg.description }}
                                            {%endif%}
                                        </b>
                                        {% if pg.observaciones %}
                                            <br>
                                            <small>
                                                {% for obs in pg.observaciones %}
                                                    {% if obs.type== 'I' %}
                                                        Ingresado desde el {{ obs.date| date("d/m/Y") }} <b>Avance:</b> {{ obs.realAdvance |number_format(2,',','.') }}% , <b>Planeado: </b>{{ obs.planned |number_format(2,',','.') }}%.
                                                    {% endif %}
                                                    {% if obs.type== 'O' %}
                                                        Egresado desde el {{ obs.date| date("d/m/Y") }} <b>Avance:</b> {{ obs.realAdvance |number_format(2,',','.') }}% , <b>Planeado: </b>{{ obs.planned |number_format(2,',','.') }}%.
                                                    {% endif %}
                                                    <br>
                                                {%endfor%}
                                            </small>
                                        {% endif %}

                                    </td>
                                    <td width="15%" style="text-align: center">
                                        {% if pg.tipo == 'Pasada' %}
                                            {% set advancesClass = "grey-gradient"%}
                                        {% else %}
                                            {% set advances = pg.result %}
                                            {% set advancesClass = 'red-gradient' %}
                                            {% if advances > 50 and advances <= 80 %}
                                                {% set advancesClass = 'orange-gradient' %}
                                            {% elseif advances > 80 %}
                                                {% set advancesClass = 'green-gradient' %}
                                            {% endif %}
                                        {% endif %}
                                        {#<span style="max-width: 400px" class="progress" data-progress-options='{"size":false,"barClasses":["{{ advancesClass }}","glossy"],"insetExtremes":true}'>{{ advances }}%</span>#}
                                        <span style="width: 220px; text-align: center;" class="progress" data-progress-options='{"size":false,"barClasses":["{{ advancesClass }}","glossy"],"bottomMarks":[{"value":0,"label":"{{ 'pequiven.advances.nope'|trans({},'messages') }}"},{"value":50,"label":"{{ 'pequiven.advances.better'|trans({},'messages') }}"},{"value":100,"label":"{{ 'pequiven.advances.complete'|trans({},'messages') }}"}],"insetExtremes":true}'>{{ advances }}%</span>                                        
                                        {#<span style="max-width: 220px" class="progress" data-progress-options='{"size":false,"barClasses":["{{ advancesClass }}","glossy"],"bottomMarks":[{"value":0,"label":"{{ 'pequiven.advances.nope'|trans({},'messages') }}"},{"value":50,"label":"{{ 'pequiven.advances.better'|trans({},'messages') }}"},{"value":100,"label":"{{ 'pequiven.advances.complete'|trans({},'messages') }}"}],"insetExtremes":true}'>{{ advances }}%</span>#}
                                    </td>
                                    <td width="15%" style="text-align: center;">
                                        <span style="text-align: center;" class="tag {{ advancesClass }}" >{{ pg.result|number_format(2,',','.') }}%
                                        </span>
                                    </td>
                                    {% if ((pg.eval=="N/A")and((pg.eval| is_string)==1)) %}
                                        <td style="text-align: center">
                                            No<br>Aplica
                                        </td>
                                    {%else%} 
                                        <td style="text-align: center">
                                            {{ pg.aporte |number_format(2,',','.') }} de<br>{{ pg.aportePlan |number_format(2,',','.') }}
                                        </td>
                                    {% endif %}
                                    {% if ((pg.eval=="N/A")and((pg.eval| is_string)==1)) %}
                                        <td style="text-align: center">
                                            No Aplica
                                        </td>
                                    {%else%} 
                                        <td style="text-align: center">
                                            {{ pg.eval |number_format(2,',','.') }}%
                                        </td>
                                    {%endif%}
                                </tr>
                                {% set cont = cont+1 %}
                            {% endfor %}
                        </tbody>

                    </table>
                </fieldset>
            {% endif %}

            {% if(management["goals"]|length>0) %}
                <h3 class="thin underline text-center">{{ "pequiven.goals.goals"|trans }}</h3>
                <fieldset class="fieldset">
                    <div ng-controller="ArrangementProgramController">
                        {#                    <legend class="legend">Metas</legend>#}
                        <table ng-init="" class="simple-table responsive-table" id="sorting-example2">

                            <thead>
                                <tr style="vertical-align: middle;">
                                    <th style="vertical-align: middle;" width="2%">#</th>
                                    <th style="vertical-align: middle;" scope="col" width="53%" >Descripci√≥n de la Meta</th>
                                    <th style="vertical-align: middle; text-align: center" scope="col" width="10%" >Peso</th>
                                    <th style="vertical-align: middle;" scope="col" width="15%">Avance hasta la Fecha</th>    
                                    <th style="vertical-align: middle; text-align: center" scope="col" width="10%" >Aporte</th>    
                                    <th style="vertical-align: middle; text-align: center" scope="col" width="10%" >Result.</th>    
                                </tr>
                            </thead>

                            <tbody>
                                {% set cont = 1 %}
                                {% for goal in  management["goals"] %} 

                                    {% if goal.resultToDate > 0 %}
                                        {% set porc = (goal.result * 100)/ goal.resultToDate %}
                                    {% else %}    
                                        {% set porc = 0 %}
                                    {% endif %}
                                    {% if goal.tipo == 'Pasada' %}
                                        {% set class = "grey-gradient"%}
                                    {% else %}
                                        {% set class = "red-gradient"%}                               
                                        {% if porc > 50 and porc <= 80 %}
                                            {% set class = 'orange-gradient' %}
                                        {% elseif porc > 80 %}
                                            {% set class = 'green-gradient' %}
                                        {% endif %}
                                    {% endif %}
                                    <tr style="min-height: 50px">
                                        <td>{{ cont }}-</td>
                                        <td  style="color: #607890; font-weight: bold; text-align: justify">{{ goal.description }}
                                            {% if goal.observaciones %}
                                                <br>
                                                <small>
                                                    {% for obs in goal.observaciones %}
                                                        {% if obs.type== 'I' %}
                                                            Ingresado desde el {{ obs.date| date("d/m/Y") }} <b>Avance:</b> {{ obs.realAdvance |number_format(2,',','.') }}% , <b>Planeado: </b>{{ obs.planned |number_format(2,',','.') }}%.
                                                        {% endif %}
                                                        {% if obs.type== 'O' %}
                                                            Egresado desde el {{ obs.date| date("d/m/Y") }} <b>Avance:</b> {{ obs.realAdvance |number_format(2,',','.') }}% , <b>Planeado: </b>{{ obs.planned |number_format(2,',','.') }}%.
                                                        {% endif %}
                                                        <br>
                                                    {%endfor%}
                                                </small>
                                            {% endif %}
                                        </td>
                                        <td style="text-align: center" >{{ goal.weight }}%</td>
                                        <td  scope="row" width="15%">
                                <center>
                                    <span ng-class="getClassForMeter({{ goal.result }},1)"></span>
                                    <span ng-class="getClassForMeter({{ goal.result }},2)"></span>
                                    <span ng-class="getClassForMeter({{ goal.result }},3)"></span>
                                    - {{ goal.result|number_format(2,',','.') }}% &nbsp;      
                                    <br>
                                    <span class="tag {{ class }}">
                                        {{ goal.result|number_format(2,',','.') }} de {{ goal.resultToDate|number_format(2,',','.') }}
                                    </span>
                                </center>
                                </td>                                       
                                <td width="10%"style="text-align: center">
                                    {% if ((goal.eval=="N/A")and((goal.eval| is_string)==1)) %}
                                        No<br>Aplica
                                    {%else%} 
                                        {{ goal.aporte |number_format(2,',','.') }} de<br>{{ goal.aportePlan |number_format(2,',','.') }}
                                    {% endif %}
                                </td>
                                <td width="10%" style="text-align: center">
                                    {% if ((goal.eval=="N/A")and((goal.eval| is_string)==1)) %}
                                        No Aplica
                                    {%else%}                                             
                                        {{ goal.eval |number_format(2,',','.') }}%
                                    {%endif%}
                                </td>
                                </tr>
                                {% set cont = cont + 1 %}
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>
                </fieldset>
            {% endif %}

            {% if ((objetives["OO"]|length>0) or (objetives["OT"]|length>0) or (objetives["OE"]|length>0) )%}
