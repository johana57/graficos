                </span>
            </div>
            <div class="field-block button-height">
                <label class="label bold">Duraci贸n</label>
                <input type="time" id="duration" disabled class="input input-large">
            </div>
            <div style="display: none;" class="field-block button-height">
                {{ form_label(form.duration) }}
                {{ form_widget(form.duration) }}
                {{ form_errors(form.duration) }}
            </div>
            <div class="field-block button-height">
                {{ form_label(form.place) }}
                {{ form_widget(form.place) }}
                {{ form_errors(form.place) }}
