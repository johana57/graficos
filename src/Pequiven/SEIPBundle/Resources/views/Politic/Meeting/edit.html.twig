                {{ form_widget(form.observation) }}
                {{ form_errors(form.observation) }}
                <span class="info-spot">
                    <span class="icon-info-round"></span>
                    <span class="info-bubble">Observaciones</span>
                </span>
            </div>
        </fieldset>


        {{ actions.create() }}

        {{ form_rest(form) }}
    </form>




{% endblock %}
{% block javascript %}
