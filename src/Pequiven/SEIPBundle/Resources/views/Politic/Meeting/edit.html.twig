{% endblock javascripts_base %}

{% block before_body %}
    {{ contentHeader("workStudyCircle.meetings.title" | trans({}))   }}
{% endblock %}

{% block body %}
    <form method="POST" action="{{ path("pequiven_meeting_edit",{meeting_id:meeting.id}) }}">

        <br /><br />
        <fieldset class="fieldset fields-list">
            <legend class="legend">{{ 'workStudyCircle.meetings.edit'|trans }}</legend>
            <div class="field-block button-height">
                {{ form_label(form.date) }}
                {{ form_widget(form.date) }}
                {{ form_errors(form.date) }}
