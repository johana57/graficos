    <br /><br />
    <div class="align-center" style="font-size:30px">
        <a href="{{ path('pequiven_seip_default_index') }}"><i class="fa fa-home fa-4x"></i>{{ 'app.http.return_to_home'|trans|raw }}</a>
    </div>
    <br /><br />
{% endblock body %}