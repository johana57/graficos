        <span style="font-size: 30px;">
            <span class="ribbon"><span class="ribbon-inner red-gradient glossy">{{ status_code }}</span></span>
            <br />
            <br />
            <br />
            <span class="icon-warning red icon-size2 "></span>
            {{ 'app.http.error.403'|trans|raw }}<br/><br/><br/>
